{% extends 'admin/include/base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">{{ 'admins'|trans([],'admin') }}</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-left">
            <li class="breadcrumb-item"><a href="{{ path('admin.index') }}">{{ 'dashboard'|trans([],'admin') }}</a></li>
            <li class="breadcrumb-item active">{{ 'admins'|trans([],'admin') }}</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-header">
              <a href="{{ path('admin.admins.create') }}" class="btn btn-success"><i class="fa fa-plus"></i> {{ 'create_new'|trans([],'admin') }}</a>
            </div>
            <div class="card-body">
              {% for message in app.flashes('success') %}
                  <div class="alert alert-success">
                      {{ message }}
                  </div>
              {% endfor %}
              <table id="example2" class="table table-bordered table-hover dataTable" role="grid">
                    <thead>
                      <tr>
                        <th style="width: 10px">#</th>
                        <th>{{ 'name'|trans([],'admin') }}</th>
                        <th>{{ 'email'|trans([],'admin') }}</th>
                        <th>{{ 'action'|trans([],'admin') }}</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for admin in admins %}
                          <tr>
                            <td style="width: 10px">{{ loop.index }}</td>
                            <td>{{ admin.name }}</td>
                            <td>{{ admin.email }}</td>
                            <td>
                              <form action="{{ path('admin.admins.delete',{'id':admin.id }) }}" method="post">
                                  <a href="{{ path('admin.admins.edit',{'id':admin.id }) }}" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                                  <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                              </form>
                            </td>
                          </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
{% endblock %}


{% block css %}
<!-- DataTables -->
<link rel="stylesheet" href="{{ asset('assets') }}/plugins/datatables/dataTables.bootstrap4.css">
{% endblock %}

{% block js %}
<!-- DataTables -->
<script src="{{ asset('assets') }}/plugins/datatables/jquery.dataTables.js"></script>
<script src="{{ asset('assets') }}/plugins/datatables/dataTables.bootstrap4.js"></script>
    <script>
    $(function () {
      $('#example2').DataTable({
          "language": {
              "paginate": {
                  "next": "التالي",
                  "previous" : "السابق"
              },
              "decimal":        "",
              "emptyTable":     "لا توجد نتائج في هذا الجدول",
              "info":           "اظهار _START_ الي _END_ من _TOTAL_ ادخال",
              "infoEmpty":      "اظهار 0 من 0 الي 0 ادخال",
              "infoFiltered":   "(تنقية من _MAX_ ادخال)",
              "infoPostFix":    "",
              "thousands":      ",",
              "lengthMenu":     "اظهار _MENU_",
              "loadingRecords": "تحميل...",
              "processing":     "جاري المعالجة...",
              "search":         "بحث:",
              "zeroRecords":    "لا يوجد نتائج",
          },
        "info" : true,
        "paging": true,
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "autoWidth": true
      });
    });
    </script>
{% endblock %}
